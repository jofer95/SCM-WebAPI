@model IEnumerable<WEB_API.Models.ProductoModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>Imagen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
            @if(!string.IsNullOrWhiteSpace(item.Imagen)){
                <a asp-controller="Catalogo" asp-action="CambiarImagen" asp-route-id="@item.Codigo" class="thumbnail">
                    <img src="@item.Imagen" alt="producto"/>
                </a>
            }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Codigo }) |
                <a asp-controller="Catalogo" asp-action="CambiarImagen" asp-route-id="@item.Codigo"> Cambiar Imagen</a> |
                @Html.ActionLink("Details", "Details", new { id=item.Codigo }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Codigo })
            </td>
        </tr>
}
    </tbody>
</table>
